{
  "name": "english-quest-reborn",
  "private": true,
  "version": "1.0.0",
  "description": "Une plateforme d'apprentissage de l'anglais gamifiée et compétitive",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev-safe": "vite --mode development --host 0.0.0.0 --port 3003 --no-open",
    "dev-simple": "vite --host localhost --port 3005 --force",
    "serve": "node serve.js",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "firebase deploy",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.{js,html,css,scss}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate": "node scripts/migrate-data.js",
    "create-admin": "node scripts/create-admin.js"
  },
  "keywords": [
    "english",
    "learning",
    "games",
    "education",
    "competitive",
    "mmorpg"
  ],
  "author": "Pierre Marienne",
  "license": "ISC",
  "dependencies": {
    "animejs": "^3.2.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.0",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.30.0",
    "dompurify": "^3.0.6",
    "firebase": "^10.8.0",
    "firebase-admin": "^11.11.0",
    "gsap": "^3.12.2",
    "howler": "^2.2.4",
    "localforage": "^1.10.0",
    "marked": "^9.1.0",
    "matter-js": "^0.19.0",
    "pixi.js": "^7.3.1",
    "socket.io-client": "^4.7.2",
    "three": "^0.157.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "sass": "^1.69.3",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "main": "vite.config.js"
}
